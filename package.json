{
  "name": "sendEmailLambda",
  "projectName": "cms-fronts::send-email-lambda",
  "description": "Send email using SES",
  "repository": "https://github.com/guardian/ses-send-email-lambda",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "cloudformation": false,
  "buildDir": "tmp/lambda",
  "isAwsLambda": true,
  "riffraffFile": "./riff-raff.yaml",
  "main": "src/index.js",
  "scripts": {
