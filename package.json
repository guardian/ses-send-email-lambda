    "rollup": "^0.26.3",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-commonjs": "^2.2.1",
    "rollup-plugin-json": "^2.0.0",
    "rollup-plugin-node-resolve": "^1.5.0",
    "tap": "^5.7.2"
  },
  "peerDependencies": {
    "aws-sdk": "2.x"
  },
  "dependencies": {
    "nunjucks": "^2.4.2"
